{% assign bg_image     = section.settings.bg_img %}
{% assign bg_image_mob = section.settings.bg_img_mob %}
{% assign title        = section.settings.title %}

<style>
	#lp-six--hero {
		min-height: 497px;
		background-image: url("{{ bg_image | img_url: 'master' }}");
	}

	@media(max-width: 992px) {
		#lp-six--hero {
			min-height: 390px;
		}
	}

	@media(max-width: 520px) {
		#lp-six--hero {
			min-height: 607px;
			background-image: url("{{ bg_image_mob | img_url: 'master' }}");
		}
	}
</style>

<section id="lp-six--hero">
	<div class="lp-six__container">
		<h2 class="lp-six__title">{{ title }}</h2>
	</div>
</section>

{% schema %}
{
  "name": "LP #6 hero",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background image for desktop"
    },
    {
      "type": "image_picker",
      "id": "bg_img_mob",
      "label": "Background image for mobile"
    }
  ],
  "presets": [
    {
      "category": "LP section hero",
      "name":"LP section hero"
    }
  ]
}
{% endschema %}
