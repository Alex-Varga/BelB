{% assign bg_image     		= section.settings.bg_img %}
{% assign bg_image_mob 		= section.settings.bg_img_mob %}
{% assign subtitle_color    = section.settings.subtitle_color %}
{% assign title        		= section.settings.title %}
{% assign title_mob        		= section.settings.title_mob %}
{% assign btn        			= section.settings.btn %}
{% assign btn_mob        			= section.settings.btn_mob %}
{% assign btn_url        	= section.settings.btn_url %}

<style>
	#lp-eight--hero {
		min-height: 497px;
		background-image: url("{{ bg_image | img_url: 'master' }}");
	}

	@media(max-width: 992px) {
		#lp-eight--hero {
			min-height: 390px;
		}
	}

	@media(max-width: 520px) {
		#lp-eight--hero {
			min-height: 607px;
			background-image: url("{{ bg_image_mob | img_url: 'master' }}");
		}
	}

	#lp-eight--hero .lp-six__container .lp-six__title p:last-child {
		color: {{ subtitle_color }};
	}
</style>

<section id="lp-eight--hero" class="lp8">
	<div class="lp-six__container">
		<div class="lp-eight__wrapper">
			<h2 class="lp-eight__title">{{ title }}</h2>
			<h2 class="lp-eight__title-mob">{{ title_mob }}</h2>
				<a href="{{ btn_url }}" class="lp-eight__btn"><img src="{{ btn | img_url: 'master' }}" alt=""></a>
				<a href="{{ btn_url }}" class="lp-eight__btn-mob"><img src="{{ btn_mob | img_url: 'master' }}" alt=""></a>
		</div>
	</div>
</section>

{% schema %}
{
  "name": "Section #1",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
		{
      "type": "text",
      "id": "title_mob",
      "label": "Title mob"
    },
		{
      "type": "image_picker",
      "id": "btn",
      "label": "Logo"
    },
		{
      "type": "image_picker",
      "id": "btn_mob",
      "label": "Logo mob"
    },
		{
      "type": "url",
      "id": "btn_url",
      "label": "Logo url",
			"default": "/"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle color",
	  	"default": "#21472E"
    },
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background image for desktop"
    },
    {
      "type": "image_picker",
      "id": "bg_img_mob",
      "label": "Background image for mobile"
    }
  ],
  "presets": [
    {
      "category": "LP section hero",
      "name":"LP section hero"
    }
  ]
}
{% endschema %}
