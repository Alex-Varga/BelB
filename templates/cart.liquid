{% comment %}
	<div class="cart">
		{% if cart.item_count > 0 %}
			{% assign product = cart.items | first %}

			<div class="product-recommendations" data-product-id="{{ product.id }}" data-limit="4">
				{%- if recommendations.products_count > 0 -%}
					<div class="recommended-product">
						<div class="recommended-product__container">
							<div class="recommended-product__wrapper">
								{%- for product in recommendations.products -%}
									<div class="recommended-product__card">
										{% render 'product-card' product: product %}
									</div>
								{%- endfor -%}
							</div>
						</div>
					</div>
				{%- endif -%}
			</div>
		{% endif %}
	</div>
{% endcomment %}

{%- section 'cart' -%}
{%- section 'featured-products' -%}
